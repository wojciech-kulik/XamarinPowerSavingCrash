    <StackLayout Spacing="25">
        <Image x:Name="icon" Source="icon.png" WidthRequest="100" HeightRequest="100"
               VerticalOptions="Center" HorizontalOptions="Center" />

        <Label x:Name="testLabel" Text="This text should be visible!"
